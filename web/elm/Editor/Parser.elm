createTagRegex : String -> Bool -> Regex
createTagRegex str group =
    (if group then "<"++str++".*?>(.*?)</"++str++">" else "<"++str++".*?>.*?</"++str++">")
    |> Regex.regex
    |> Regex.caseInsensitive

innerHtml : String -> String -> String
innerHtml tagStr input =
    Regex.find Regex.All (createTagRegex tagStr True) input |> getFirstSubmatch

stripTags : String -> String
stripTags =
    Regex.replace Regex.All (Regex.regex "<.*?>|</.*?>") (always "")
    >> Regex.replace Regex.All (Regex.regex "&[a-zA-Z0-9]*?;") (always " ")

getFirstSubmatch : List Regex.Match -> String
getFirstSubmatch =
    List.head
    >> Maybe.map .submatches
    >> Maybe.withDefault []
    >> List.head
    >> Maybe.withDefault Nothing
    >> Maybe.withDefault ""

parse : String -> Maybe Chapter
parse input =
    let
        chapterStyleSheet =
            innerHtml "style" input
            |> \str -> if String.length str == 0 then Nothing else Just str
        headers =
            Regex.find Regex.All (createTagRegex "h[1-6]" False) input |> List.map .match
        content =
            input
            |> Regex.replace Regex.All (Regex.regex "</body>|</html>") (always "")
            |> Regex.split Regex.All (createTagRegex "h[1-6]" False)
            |> List.drop 1
        scrapedEntries =
            List.map2
                (\header content ->
                    { title = header, level = getHeaderType header, content = content }
                )
                headers content
        chapterEntry =
            scrapedEntries
            |> List.filter (.level >> (==) 0)
            |> List.head
        entries =
            scrapedEntries
            |> List.filter (.level >> (/=) 0)
            |> List.indexedMap
                (\index entry ->
                    { id          = Nothing
                    , chapter     = -1
                    , level       = entry.level
                    , order       = index
                    , title       = entry.title
                    , content     = entry.content
                    , releaseDate = ""
                    , authorsNote = ""
                    }
                )
    in
        Maybe.map3
            (\chapterEntry' chapterStyleSheet' entries' ->
                { id          = Nothing
                , order       = -1
                , stylesheet  = chapterStyleSheet'
                , title       = chapterEntry'.title
                , content     = chapterEntry'.content
                , releaseDate = ""
                , authorsNote = ""
                , entries_    = entries'
                }
            )
            chapterEntry chapterStyleSheet (Just entries)

getHeaderType : String -> Int
getHeaderType =
    String.dropLeft 2
    >> String.left 1
    >> String.toInt
    >> Result.toMaybe
    >> Maybe.withDefault 0
    >> flip (-) 1

